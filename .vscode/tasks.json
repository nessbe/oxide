{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Cargo Build Debug",
			"type": "shell",
			"command": "bash \"build-debug.sh\"",
			"options": {
				"cwd": "${workspaceFolder}/scripts/"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Cargo Build Release",
			"type": "shell",
			"command": "bash \"build-release.sh\"",
			"options": {
				"cwd": "${workspaceFolder}/scripts/"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Cargo Run Debug",
			"type": "shell",
			"command": "bash \"run-debug.sh\"",
			"options": {
				"cwd": "${workspaceFolder}/scripts/"
			},
			"group": "none",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Cargo Run Release",
			"type": "shell",
			"command": "bash \"run-release.sh\"",
			"options": {
				"cwd": "${workspaceFolder}/scripts/"
			},
			"group": "none",
			"problemMatcher": [
				"$rustc"
			]
		}
	]
}
